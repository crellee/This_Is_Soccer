@model This_Is_Soccer.Models.Entity.PlayerModel

@{
    ViewBag.Title = "Details";
}

<h2>About @Html.DisplayFor(model => model.PlayerName)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Player Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlayerName)
        </dd>

        <dt>
            Club Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Club.ClubName)
            <br />
            <img src="@Html.DisplayFor(model => model.Club.ClubLogo)" width="40px" height="40px" />

        </dd>

        <dt>
            Position:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position.PositionName)
        </dd>

        <dt>
            Player Picture:
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.PlayerPic)" width="150px" height=150px">
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PlayerId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
