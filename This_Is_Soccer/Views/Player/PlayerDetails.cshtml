@model This_Is_Soccer.Models.Entity.ViewModels.PlayerDetailsViewModel
@{
    ViewBag.Title = "PlayerDetails";
}


<h2>About @Html.DisplayFor(model => model.Player.PlayerName)</h2>
<div class="col-md-12">
    <div class="col-md-4">
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Player Name:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Player.PlayerName)
            </dd>

            <dt>
                Club Name:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Player.Club.ClubName)
            </dd>

            <dt>
                Position:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Player.Position.PositionName)
            </dd>

            <dt>
                Player Picture:
            </dt>

            <dd>
                <img src="@Html.DisplayFor(model => model.Player.PlayerPic)" width="150px" height=150px">
            </dd>

        </dl>
        <p>
            @if (User.IsInRole("admin"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = Model.Player.PlayerId })
            } |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>

    <div class="col-md-3">
        <br />
        <br />
        <img src="@Html.DisplayFor(model => model.Player.Club.ClubLogo)" width="100px" height="100px" />
    </div>

    <h3>Team mates</h3>
    <div class="col-md-4" style="height:400px; overflow:auto;">
        <table class="table players-table">
            @foreach (var item in Model.Players)
            {

                <tr>
                    <td>
                        <img src="@Html.DisplayFor(model => item.PlayerPic)" style="width:40px;height:40px" />
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.PlayerName)
                    </td>
                </tr>
            }
        </table>
    </div>

</div>